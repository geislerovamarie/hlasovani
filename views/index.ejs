<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
      }

      #poll {
        border-collapse: collapse;
        max-width: 100%;
        white-space: nowrap;
      }

      #poll td,
      #poll th {
        border: 1px solid #f2f2f2;
        padding: 8px;
      }

      #poll th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #004479;
        color: white;
      }

      table tr:last-child {
        background-color: #eeecec;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <% if (user) { %> <%= user.login %> &nbsp;
    <a href="/sign-out">Odhlásit</a>
    <% }%>
    <br />
    <hr width="100%" size="2" />
    <br />

    <form action="/new-poll/3" method="get">
      <button name="addPoll" type="submit">Vytvořit nové hlasování</button>
    </form>
    <br />

    <div id="pollsList"><%- include("_polls") %></div>

    <script>
      const ws = new WebSocket("ws://localhost:3000")

      ws.addEventListener("message", (ev) => {
        const data = JSON.parse(ev.data)
        console.log("2 message received")

        if (data.type === "pollsList") {
          const el = document.getElementById("pollsList")
          el.innerHTML = data.html
          console.log("3 message is pollslist")
        } else if (data.type === "changeInUser") {
          console.log("3 message is changeinuser")
          document.location.href = "/"
        }
      })
    </script>
  </body>
</html>
